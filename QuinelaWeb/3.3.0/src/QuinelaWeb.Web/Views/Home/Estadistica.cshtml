@model IEnumerable<QuinelaWeb.Web.Models.Quinelas.QuinelaEstadisticaViewModel>


@using System.Web.Optimization
@{
    ViewBag.ActiveMenu = PageNames.Home; //The menu item will be active for this page.
}
@section styles {
    <link href="~/lib/morris.js/morris.css" rel="stylesheet" />
}


    <div class="row clearfix">
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
            <div class="card">
                <div class="header">
                    <h2>Posiciones</h2>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-hover dashboard-task-infos">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nombre</th>
                                    <th>Puntos</th>
                                    <th> </th>

                                </tr>
                            </thead>
                            <tbody>
                                @{ var i = 1; }
                                @foreach (var item in Model) {

                                <tr>
                                    <td>@i </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Puntos)
                                    </td>



                                    <td class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                            <i class="material-icons">menu</i>
                                        </a>
                                        <ul class="dropdown-menu pull-right">
                                            <li> @Html.ActionLink("Ver", "Ver",  new { id = item.Id })</li>
                                        
                                        </ul>
                                    </td>

                                 
                                </tr>

                            i += 1;
                        }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
